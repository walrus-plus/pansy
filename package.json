{
  "name": "@pansy/workspace",
  "private": true,
  "description": "Library toolkit based on rollup.",
  "main": "lib/index.js",
  "repository": "git@github.com:walrus-plus/pansy.git",
  "author": "wangxingkang <wang_xingkang@qq.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "father-build --watch",
    "test": "walrus test",
    "lint": "walrus lint",
    "lint:style": "walrus stylelint",
    "lint:commit": "walrus commitlint --env HUSKY_GIT_PARAMS",
    "prettier": "walrus prettier",
    "version": "ts-node scripts/genChangelog.ts git add CHANGELOG.md"
  },
  "devDependencies": {
    "@walrus/cli": "^0.2.2",
    "execa": "^3.2.0",
    "father-build": "^1.14.0",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "lerna-changelog": "^0.8.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier",
      "commit-msg": "yarn lint:commit"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
